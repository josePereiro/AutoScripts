{
    // ----. -.- .-... -- -... - -. -- .- .- .-.-.--.-.
    // MARK: vscode
    "workbench.settings.editor": "json",
    "workbench.settings.useSplitJSON": true,
    "terminal.integrated.fontSize": 15,
    "editor.minimap.enabled": true,
    "editor.fontSize": 18,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 90,
    // "window.autoDetectColorScheme": false,
    // "workbench.colorTheme": "Visual Studio Light",
    // "workbench.colorTheme": "Visual Studio Light",
    // "window.systemColorTheme" : "light",
    "editor.minimap.sectionHeaderFontSize": 9,
    "editor.minimap.showMarkSectionHeaders": true,
    "editor.minimap.scale": 3,
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },

    // "window.commandCenter": false,
    "workbench.editorAssociations": {
        "*.copilotmd": "vscode.markdown.preview.editor",
        "*.md": "default",
        "*.csv": "default",
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt",
        "matlab.interrupt"
    ],
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "editor.suggest.selectionMode": "never",
    "editor.suggest.preview": false,
    "editor.suggestOnTriggerCharacters": false,
    // "editor.inlineSuggest.enabled": false,
    // "editor.inlineSuggest.suppressSuggestions": true,
    "editor.quickSuggestionsDelay": 10000000,
    "editor.minimap.showSlider": "always",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true
    },
    "zenMode.hideLineNumbers": false,

    
    // ----. -.- .-... -- -... - -. -- .- .- .-.-.--.-.
    "json.schemas": [
        {
            "fileMatch": ["**/Oba.jsonc"],
            "url": "file:/Users/Pereiro/Documents/js/oba-plugin/schemas/Oba-jsonc-schema.jsonc",
        }
    ],


    
    // MARK: proxy
    // "http.proxy": "http://10.6.100.72:3128",
    // "http.proxy": "http://apereiro%40fbio.uh.cu:92110927807@proxy-trab.uh.cu:3128/",
    // "http.proxy": "http://proxy-trab.uh.cu:3128/",
