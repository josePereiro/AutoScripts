    // ----. -.- .-... -- -... - -. -- .- .- .-.-.--.-.
    // MARK: julia
    // "julia.enableCrashReporter": false,
    // "julia.symbolCacheDownload": true,
    "julia.enableTelemetry": false,
    "julia.executablePath": "/Users/Pereiro/.juliaup/bin/julia",
    "julia.symbolCacheDownload": true,
    "julia.plots.path": "./_plots",
    "julia.additionalArgs": [
        "--startup-file=yes"
    ],
    "julia.NumThreads": "auto",

    // ----. -.- .-... -- -... - -. -- .- .- .-.-.--.-.
    // MARK: python
    "python.venvFolders": [".python/venvs"],

    // ----. -.- .-... -- -... - -. -- .- .- .-.-.--.-.
    // MARK: git
    "git.openRepositoryInParentFolders": "never",
    
    // ----. -.- .-... -- -... - -. -- .- .- .-.-.--.-.
    // MARK: latex
    "latex-workshop.view.pdf.color.dark.backgroundColor": "#ffffff",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.invert": 0.9, 
    "latex-workshop.latex.outDir": "%DIR%/.aux",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.tools": [
        {
        "name": "latexmk",
        "command": "latexmk",
        "args": [
            "-synctex=1",
            "-f",
            "-interaction=nonstopmode",
            "-file-line-error",
            "-pdf",
            "-outdir=%OUTDIR%",
            "%DOC%"
        ],
        "env": {}
        },
    ],

    // ----. -.- .-... -- -... - -. -- .- .- .-.-.--.-.
    // MARK: ts/js
    "typescript.tsserver.log": "terse",

    // ----. -.- .-... -- -... - -. -- .- .- .-.-.--.-.
    // MARK: Other plugins
    // List of tags. *Note, if one tag starts with another tag, the longer 
    // tag should be specified first to prevent the shorter tag being matched.*
    "todo-tree.general.tags": [
        "ISSUE", "BUG", "TODO", "ToRead", "IDEAS", "XXX", "TODEL", "DEV", "ToDel", "[ ]", "[x]", "TAI"
    ],
    "explorer.confirmDragAndDrop": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "git.confirmSync": false,
    "cmake.showOptionsMovedNotification": false,
    
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "github.copilot.advanced": {
        "authProvider": "github"
    },
    "terminal.integrated.enableMultiLinePasteWarning": false,

    // MARK: gutterpreview
    "gutterpreview.imagePreviewMaxHeight": "300",
    "editor.accessibilitySupport": "off",
    "MATLAB.showFeatureNotAvailableError": false,
    "julia.enableCrashReporter": false,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "jupyter.askForKernelRestart": false,
}


